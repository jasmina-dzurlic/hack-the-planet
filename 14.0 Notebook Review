    "def random_words_api(nwords=10):\n",
    "    \"no docstring\"\n",
    "    URL = \"https://random-word-api.herokuapp.com/word\"\n",
    "    response = requests.get(url=URL, params={\"number\": nwords})\n",
    "    return response.json()\n",
    "\n",
    "# demonstration\n",
    "random_words_api(10)"
   ]

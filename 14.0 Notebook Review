   "source": [
    "def make_letter_histo_dict(words):\n",
    "    \"return a dict w/ {letter: count} for all words\"\n",
    "    counts = {}\n",
    "    for word in words:\n",
    "        print(word)\n",
    "        for letter in word:\n",
    "            print(letter)\n",
    "            if letter not in counts:\n",
    "                counts[letter] = 1\n",
    "            else:\n",
    "                counts[letter] += 1\n",
    "    return counts \n",
    "\n",
    "count_dict = make_letter_histo_dict(words)\n",
    "count_dict"
   ]
